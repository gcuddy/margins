{
  "name": "margins-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "vitest run",
    "test:e2e": "playwright test",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "web": "cd apps/web && bun dev",
    "realtime": "cd packages/realtime && bun dev"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "happy-dom": "^15.7.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "eslint": "^9.10.0"
  },
  "type": "module",
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "packages/prisma/schema.prisma": [
      "prisma format"
    ]
  }
}
