{
	"name": "margins-monorepo",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"test": "vitest run",
		"test:e2e": "playwright test",
		"pre-commit": "lint-staged",
		"prepare": "husky",
		"web": "cd apps/web && bun dev",
		"realtime": "cd packages/realtime && bun dev"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.4.2",
		"happy-dom": "^14.3.6",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.0.3",
		"typescript": "^5.2.2",
		"vitest": "^1.4.0"
	},
	"dependencies": {
		"eslint": "^8.53.0"
	},
	"type": "module",
	"lint-staged": {
		"(apps|packages)/**/*.{js,ts,jsx,tsx,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.json": [
			"prettier --write"
		],
		"packages/prisma/schema.prisma": [
			"prisma format"
		]
	}
}
