{
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid",
	"pluginSearchDirs": ["."],
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"tailwindFunctions": ["tv"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"printWidth": 100,
				"proseWrap": "always",
				"tabWidth": 2,
				"useTabs": true,
				"semi": false,
				"trailingComma": "none",
				"bracketSameLine": true
			}
		}
	]
}
